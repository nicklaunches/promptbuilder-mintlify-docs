{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "Prompt Builder",
    "colors": {
        "primary": "#167bff",
        "light": "#378dff",
        "dark": "#9c5de8"
    },
    "favicon": "/favicon.svg",
    "navigation": {
        "global": {
            "anchors": [
                {
                    "anchor": "Website",
                    "icon": "book-open-cover",
                    "href": "https://promptbuilder.cc"
                },
                {
                    "anchor": "Blog",
                    "icon": "newspaper",
                    "href": "https://promptbuilder.cc/blog"
                }
            ]
        },
        "tabs": [
            {
                "tab": "Guides",
                "groups": [
                    {
                        "group": "Getting started",
                        "pages": [
                            "index",
                            "quickstart",
                            "development"
                        ]
                    },
                    {
                        "group": "Customization",
                        "pages": [
                            "essentials/settings",
                            "essentials/navigation"
                        ]
                    },
                    {
                        "group": "Writing content",
                        "pages": [
                            "essentials/markdown",
                            "essentials/code",
                            "essentials/images",
                            "essentials/reusable-snippets"
                        ]
                    },
                    {
                        "group": "AI tools",
                        "pages": [
                            "ai-tools/cursor",
                            "ai-tools/claude-code",
                            "ai-tools/windsurf"
                        ]
                    }
                ]
            }
        ]
    },
    "logo": {
        "light": "/logo/promptbuilder-light.svg",
        "dark": "/logo/promptbuilder-dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:support@promptbuilder.cc"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Open App",
            "href": "https://app.promptbuilder.cc"
        }
    },
    "contextual": {
        "options": [
            "copy",
            "view",
            "chatgpt",
            "claude",
            "perplexity",
            "mcp",
            "cursor",
            "vscode"
        ]
    },
    "footer": {
        "socials": {
            "x": "https://x.com/promptbuildercc"
        }
    }
}