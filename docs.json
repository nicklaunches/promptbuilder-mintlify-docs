{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "Prompt Builder",
    "colors": {
        "primary": "#167bff",
        "light": "#378dff",
        "dark": "#9c5de8"
    },
    "favicon": "/favicon.svg",
    "navigation": {
        "global": {
            "anchors": [
                {
                    "anchor": "Website",
                    "icon": "book-open-cover",
                    "href": "https://promptbuilder.cc"
                },
                {
                    "anchor": "Blog",
                    "icon": "newspaper",
                    "href": "https://promptbuilder.cc/blog"
                }
            ]
        },
        "tabs": [
            {
                "tab": "Documentation",
                "groups": [
                    {
                        "group": "Getting started",
                        "pages": [
                            "index",
                            "quickstart",
                            "roadmap"
                        ]
                    },
                    {
                        "group": "Features",
                        "pages": [
                            "features/prompt-generator",
                            "features/prompt-optimizer",
                            "features/prompt-library",
                            "features/prompt-assistant",
                            "features/smm-bot"
                        ]
                    },
                    {
                        "group": "Use Cases",
                        "pages": [
                            "use-cases/for-individuals"
                        ]
                    },
                    {
                        "group": "Miscellaneous",
                        "pages": [
                            "contact us",
                            "FAQ",
                            "troubleshooting"
                        ]
                    }
                ]
            },
            {
                "tab": "Changelog",
                "groups": [
                    {
                        "group": "Changelog",
                        "pages": [
                            "changelog"
                        ]
                    }
                ]
            }
        ]
    },
    "logo": {
        "light": "/logo/promptbuilder-light.svg",
        "dark": "/logo/promptbuilder-dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:support@promptbuilder.cc"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Open App",
            "href": "https://app.promptbuilder.cc"
        }
    },
    "contextual": {
        "options": [
            "copy",
            "view",
            "chatgpt",
            "claude",
            "perplexity",
            "mcp",
            "cursor",
            "vscode"
        ]
    },
    "footer": {
        "socials": {
            "x": "https://x.com/promptbuildercc"
        }
    }
}
